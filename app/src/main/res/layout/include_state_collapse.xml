<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:id="@+id/collapse_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="2dp"
        android:visibility="invisible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:background="@drawable/bg_primary_left_right_top_r8" />

        <View
            android:id="@+id/view_shadow"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            android:background="?android:colorBackground"
            android:elevation="2dp" />

        <com.google.android.material.circularreveal.CircularRevealFrameLayout
            android:id="@+id/layout_actions"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_accent_left_bottom_r160"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/ib_add_thing"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="start"
                android:layout_margin="8dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:src="@drawable/ic_add_thing"
                android:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/ib_add_memorial_day"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="8dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:src="@drawable/ic_add_memorial_day"
                android:tint="@android:color/white" />
        </com.google.android.material.circularreveal.CircularRevealFrameLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:background="@drawable/bg_accent_left_bottom_r60"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/ib_actions"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_white_24dp" />
        </FrameLayout>

    </com.google.android.material.circularreveal.CircularRevealFrameLayout>
</merge>